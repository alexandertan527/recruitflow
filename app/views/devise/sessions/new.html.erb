<div class="container text-center mt-5">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "w-50 mx-auto" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "w-50 mx-auto" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary mb-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
