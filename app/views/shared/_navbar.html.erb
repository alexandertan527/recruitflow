<div class="navbar navbar-light bg-primary navbar-lewagon" data-bs-theme="dark">
  <div class="container container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <h2 class="m-0">RecruitFlow</h2>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item d-flex justify-content-end">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item d-flex justify-content-end">
            <%= link_to "Profile", edit_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item d-flex justify-content-end">
            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item d-flex justify-content-end">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
